/dts-v1/;

#include <unisoc/uwp5662.dtsi>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "IVY5662 Boards";
	compatible = "unisoc,uwp5662", "unisoc,uwp566x", "unisoc,uwp";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		label = "led";
		led_1 {
			gpios = <&port0 1 (GPIO_PUD_PULL_DOWN | GPIO_DIR_OUT)>;
		};

		led_2 {
			gpios = <&port0 3 (GPIO_PUD_PULL_DOWN | GPIO_DIR_OUT)>;
		};

		led_3 {
			gpios = <&port0 2 (GPIO_PUD_PULL_DOWN | GPIO_DIR_OUT)>;
		};
	};
};

&uart0 {
	status = "ok";
};

&uart2 {
	status = "ok";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x20000>;
		};
		scratch_partition: partition@20000 {
			label = "image-scratch";
			reg = <0x00020000 0x10000>;
		};
		slot0_partition: partition@40000 {
			label = "image-0";
			reg = <0x00040000 0x80000>;
		};
		slot1_partition: partition@180000 {
			label = "image-1";
			reg = <0x000180000 0x80000>;
		};

#if defined(CONFIG_FILE_SYSTEM_NFFS)
		nffs_partition: partition@2C0000 {
			label = "nffs";
			reg = <0x0002C0000 0x00140000>;
		};
#endif

#if defined(CONFIG_FS_FLASH_STORAGE_PARTITION)
		storage_partition: partition@2C0000 {
			label = "storage";
			reg = <0x0002C0000 0x00140000>;
		};
#endif

	};
};
