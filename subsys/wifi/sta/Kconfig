config WIFIMGR_STA
	bool "Enable STA mode"
	default n
        help
          Enable STA mode.

if WIFIMGR_STA

config WIFIMGR_LED_STA
	int "STA LED"
	default 2
        depends on WIFIMGR_LED
        help
          Specify the STA LED.

config WIFIMGR_DHCPC
	bool "Enable DHCP client"
	select NETWORKING
	select NET_IPV4
	select NET_DHCPV4
	default y
	help
	  Start DHCP client by WiFi manger.

endif # WIFIMGR_STA

